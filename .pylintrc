[MASTER]
ignore=venv,node_modules,.git,__pycache__,alembic
ignore-patterns=venv,node_modules

[MESSAGES CONTROL]
# Disable C0103 (invalid-name) for pydantic/sqlalchemy specific patterns if needed.
# Disable R0801 (duplicate-code) globally if desired, but we keep it enabled to catch issues.
# We disable it for specific blocks if necessary.
disable=C0114

[SIMILARITIES]
# Minimum lines number of a similarity.
min-similarity-lines=15

[This-Section-Is-Used-To-Fix-Import-Errors]
# We use os.getcwd() to make sure we find the venv relative to the project root,
# regardless of where pylint is invoked (assuming it's invoked from near the root or we find it).
# We also add the current directory to sys.path to ensure 'app' is importable.
init-hook='import sys, os; cwd = os.getcwd(); sys.path.append(cwd); venv_site = os.path.join(cwd, "venv/lib/python3.11/site-packages"); sys.path.append(venv_site) if os.path.exists(venv_site) else None'
